<% if movement.valid? %>
document.getElementById("ui-modal-placeholder").innerHTML = ""; // remove modal
document.querySelector(".movements-list-component").outerHTML = "<%= j render(Movement::ListComponent.new(movements: movements, show_depot: depot_id.blank?)) %>";
<% else %>
document.getElementById("ui-modal-placeholder").innerHTML = "<%= j render(Movement::ModalFormComponent.new(movement, depot_id, url, current_user)) %>";
<% end %>
