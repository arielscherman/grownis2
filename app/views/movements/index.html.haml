.ui-page-header
  %h1 Movimientos

  - if depots.any?
    = link_to new_movement_path, remote: true, class: "ui-button ui-button-primary" do
      %i.icon-plus
      %span Agregar Movimiento

.ui-page-content
  .ui-card.ui-card-full
    .ui-card-content
      .ui-card-body#movements-list-component-placeholder
        = render(Movement::ListComponent.new(movements: movements, show_depot: true))
